// This is a placeholder schema to suppress Prisma postinstall warnings in monorepo
// The actual schemas are located in:
// - packages/db/prisma/schema.prisma
// - apps/api/prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Placeholder model to make schema valid
model Placeholder {
  id String @id @default(cuid())
}